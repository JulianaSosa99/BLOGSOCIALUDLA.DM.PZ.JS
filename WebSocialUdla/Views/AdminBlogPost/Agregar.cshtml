@model WebSocialUdla.Models.ViewModels.AgregarBlogNodoRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Agregar un Nuevo Blog - Admin Functionality</h1>
    </div>
</div>

<div class="container py-2">
    <form asp-action="Agregar" method="post">
        <div class="mb-3">
            <label asp-for="Encabezado" class="form-label"></label>
            <input asp-for="Encabezado" class="form-control" required />
            <span asp-validation-for="Encabezado" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TituloPagina" class="form-label"></label>
            <input asp-for="TituloPagina" class="form-control" required />
            <span asp-validation-for="TituloPagina" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Contenido" class="form-label"></label>
            <textarea asp-for="Contenido" class="form-control"></textarea>
            <span asp-validation-for="Contenido" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DescripcionCorta" class="form-label"></label>
            <input asp-for="DescripcionCorta" class="form-control" required />
            <span asp-validation-for="DescripcionCorta" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UrlImagenDestacada" class="form-label"></label>
            <input asp-for="UrlImagenDestacada" class="form-control" required />
            <span asp-validation-for="UrlImagenDestacada" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ManejadorUrl" class="form-label"></label>
            <input asp-for="ManejadorUrl" class="form-control" required />
            <span asp-validation-for="ManejadorUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FechaPublicacion" class="form-label"></label>
            <input asp-for="FechaPublicacion" type="date" class="form-control" required />
            <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Autor" class="form-label"></label>
            <input asp-for="Autor" class="form-control" required />
            <span asp-validation-for="Autor" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Visible" class="form-check-input" />
            <label class="form-check-label" asp-for="Visible">Visible</label>
        </div>

        <div class="mb-3">
            <label asp-for="TagSeleccionado" class="form-label">Etiqueta</label>
            <select asp-for="TagSeleccionado" asp-items="@Model.Tags" class="form-control">
                <option value="">Selecciona una etiqueta</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Agregar</button>
    </form>
</div>

@section Scripts {
    <script>
        var editor = new FroalaEditor('#contenido');
    </script>
}
