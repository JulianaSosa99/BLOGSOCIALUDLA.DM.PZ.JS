@model WebSocialUdla.Models.ViewModels.EditarBlogNodoRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Editar BlogPost - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form asp-action="Editar" method="post">
            <div class="mb-3">
                <label asp-for="Id" class="form-label">Id</label>
                <input asp-for="Id" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Encabezado" class="form-label">Encabezado</label>
                <input asp-for="Encabezado" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="TituloPagina" class="form-label">Título de Página</label>
                <input asp-for="TituloPagina" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Contenido" class="form-label">Contenido</label>
                <textarea asp-for="Contenido" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="DescripcionCorta" class="form-label">Descripción Corta</label>
                <input asp-for="DescripcionCorta" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="UrlImagenDestacada" class="form-label">URL de Imagen Destacada</label>
                <input asp-for="UrlImagenDestacada" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="ManejadorUrl" class="form-label">Manejador URL</label>
                <input asp-for="ManejadorUrl" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="FechaPublicacion" class="form-label">Fecha de Publicación</label>
                <input asp-for="FechaPublicacion" type="date" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Autor" class="form-label">Autor</label>
                <input asp-for="Autor" class="form-control" />
            </div>

            <div class="mb-3 form-check">
                <input asp-for="Visible" class="form-check-input" />
                <label asp-for="Visible" class="form-check-label">Visible</label>
            </div>

            <div class="mb-3">
                <label asp-for="TagSeleccionado" class="form-label">Etiqueta</label>
                <select asp-for="TagSeleccionado" asp-items="@Model.Tags" class="form-control">
                    <option value="">Selecciona una etiqueta</option>
                </select>
            </div>

            <div class="mb-3 d-flex">
                <button type="submit" class="btn btn-dark">Actualizar</button>
                <a asp-area="" asp-controller="AdminBlogPost" asp-action="Eliminar" class="btn btn-danger ms-2">Eliminar</a>
            </div>
        </form>
    }
    else
    {
        <p>NO SE ENCONTRÓ EL POST</p>
    }
</div>

@section Scripts {
    <script>
        var editor = new FroalaEditor('#contenido');
    </script>
}
