@model BloggieWebProject.Models.ViewModels.EditarBlogPostRequest

@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Agregar un Nuevo BlogPost - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="id" asp-for="Id" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Encabezado</label>
                <input type="text" class="form-control" id="encabezado" asp-for="Encabezado" />
            </div>
            <div class="mb-3">
                <label class="form-label">Título de Página</label>
                <input type="text" class="form-control" id="tituloPagina" asp-for="TituloPagina" />
            </div>
            <div class="mb-3">
                <label class="form-label">Contenido</label>
                <textarea class="form-control" id="contenido" asp-for="Contenido"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Descripción Corta</label>
                <input type="text" class="form-control" id="descripcionCorta" asp-for="DescripcionCorta" />
            </div>
            <div class="mb-3">
                <label class="form-label">URL de Imagen Destacada</label>
                <input type="text" class="form-control" id="urlImagenDestacada" asp-for="UrlImagenDestacada" />
            </div>
            <div class="mb-3">
                <label class="form-label">Manejador URL</label>
                <input type="text" class="form-control" id="manejadorUrl" asp-for="ManejadorUrl" />
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha de Publicación</label>
                <input type="date" class="form-control" id="fechaPublicacion" asp-for="FechaPublicacion" />
            </div>
            <div class="mb-3">
                <label class="form-label">Autor</label>
                <input type="text" class="form-control" id="autor" asp-for="Autor" />
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="visible" asp-for="Visible" />
                <label class="form-check-label" for="visible">Visible</label>
            </div>

            <div class="mb-3">
                <label class="form-label">Etiqueta</label>
                <select class="form-select"
                        id="tagSeleccionado"
                        asp-items="@Model.Tags"
                        asp-for="TagSeleccionado">
                </select>

            </div>
            <div class="mb-3 d-flex">
                <button type="submit" class="btn btn-dark">Actualizar</button>
                <button type="submit"
                    class="btn btn-danger ms-2"
                    asp-area=""
                    asp-controller="AdminBlogPost"
                    asp-action="Eliminar">
                    Eliminar
                 </button>
            </div>
        </form>
    }
    else
    {
        <p>NO SE ENCONTRO EL POST</p>
    }
</div>

@section Scripts {
    <script>
        var editor = new FroalaEditor('#contenido');
    </script>
}